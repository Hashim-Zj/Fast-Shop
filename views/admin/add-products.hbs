<div class="container">

  <section class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Add Product</h3>
    </div>
    <div class="panel-body">

      <form action="/admin/addProduct" method="post" enctype="multipart/form-data" class="form-horizontal mt-5"
        role="form">
        <!-- form-group // -->
        <div class="form-group">
          <label for="name" class="col-sm-3 control-label">Title</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" name="title" id="title" placeholder="Enter Product Title">
          </div>
        </div> <!-- form-group // -->
        <div class="form-group">
          <label for="name" class="col-sm-3 control-label">Catogary</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" name="catogary" id="catogary" placeholder="Catogary">
          </div>
        </div> <!-- form-group // -->
        <div class="form-group">
          <label for="about" class="col-sm-3 control-label">Discription</label>
          <div class="col-sm-9">
            <textarea class="form-control" name="discription" id="discription"></textarea>
          </div>
        </div>
        <!-- form-group // -->
        <div class="form-group">
          <label class="col-sm-3 control-label">Price</label>
          <div class="col-sm-3">
            <input type="text" class="form-control" name="price" id="price" placeholder="price">
          </div>
        </div> <!-- form-group // -->
        <div class="form-group">
          <div class="col-sm-3">
            <label class="control-label small" for="file_img">Image (jpg/png):</label>
            <input type="file" name="file_img">
          </div>
          <div class="col-sm-3">
            <label class="control-label small" for="file_img">Thumbnail Image:</label> 
            <input type="file" name="file_Thumb">
          </div>
        </div> <!-- form-group // -->
        <hr>
        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-9">
            <button type="submit" class="btn btn-primary">ADD</button>
          </div>
        </div>
      </form>

    </div>
  </section>

</div>