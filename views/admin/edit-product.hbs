<div class="container">

  <section class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Add Product</h3>
    </div>
    <div class="panel-body">

      <form action="/admin/editProduct/{{product._id}}" method="post" enctype="multipart/form-data"
        class="form-horizontal mt-5" role="form">
        <!-- form-group // -->
        <div class="form-group">
          <label for="name" class="col-sm-3 control-label">Title</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" name="title" id="title" value="{{product.Title}}"
              placeholder="Title">
          </div>
              <div class="form-group">
                <label for="exampleDataList" class="form-label">Item Division</label>
                <input class="form-control" list="datalistOptions" name="ieomDiv" id="exampleDataList"
                  placeholder="{{product.ieomDiv}}" required>
                <datalist id="datalistOptions">
                  <option value="Electronics">
                  <option value="vegetables">
                  <option value="Grocery">
                  <option value="Books">
                  <option value="Movies & TV Shows">
                </datalist>
              </div>
        </div> <!-- form-group // -->
        <div class="form-group">
          <label for="name" class="col-sm-3 control-label">Catogary</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" name="catogary" id="catogary" value="{{product.Catogary}}"
              placeholder="Catogary" required>
          </div>
        </div> <!-- form-group // -->
        <div class="form-group">
          <label for="about" class="col-sm-3 control-label">Discription</label>
          <div class="col-sm-9">
            <textarea class="form-control" name="discription" id="discription">{{product.Discription}}</textarea>
          </div>
        </div>
        <!-- form-group // -->
        <div class="form-group">
          <label class="col-sm-3 control-label">Price</label>
          <div class="col-sm-3">
            <input type="text" class="form-control" name="price" id="price" value="{{product.Price}}" 
            placeholder="price" required>
          </div>
        </div>
        <img src="/images/products/{{product._id}}.jpeg" style="width: 60px;height: 100px;" alt="" id="imagview">

        <div class="form-group">
          <!-- form-group // -->
          <div class="col-sm-3">
            <label class="control-label small" for="file_img">Image (jpg/png):</label>
            <input type="file" name="file_img" onchange="viewImage(event)" required>
          </div>
        </div> <!-- form-group // -->
        <hr>
        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-9">
            <button type="button" class="btn btn-primary">cancle</button>
            <button type="submit" class="btn btn-primary">Update</button>

          </div>
        </div>
      </form>

    </div>
  </section>

</div>

<script>
  viewImage = (event) => {
    document.getElementById('imagview').src = URL.createObjectURL(event.target.files[0])
  }
</script>